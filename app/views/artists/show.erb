<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Artist show page</title>
  </head>
  <body>
      <h1><%= @artist.name %></h1>
      <br />
      <ul>
        <% @artist.songs.each do |song| %>
        <a href="/songs/<%= song.slug%>"><%= song.name %></a>
        <% end %>
      </ul>
      <br/>
      <h2> Genres: </h2>
      <ul>
        <% @artist.genres.each do |genre| %>
        <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
        <% end %>
      </ul>

  </body>
</html>
