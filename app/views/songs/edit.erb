<form action="/songs/<%=@song.slug%>" method="post">
  <input id= "hidden" type="hidden" name="_method" value="put">

  <label for="song_name">Name:</label>
  <input type="text" name="song_name" id="Name" value="<%=@song.name%>">

  <label for="artist_name">Artist Name:</label>
  <input type="text" name="artist_name" id="Artist Name" value="<%=@song.artist.name%>">


  <% Genre.all.each do |genre| %>
    <label for="genres[]"><%= genre.name %></label>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>">
  <%end%>

  <input id="save" type="submit" name="save" value="Save">

</form>
