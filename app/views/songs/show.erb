

<% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>


<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Song show page</title>
  </head>
  <body>
      <h1><%= @song.name %></h1>
      <p><a href="/artists/<%= @song.artist.slug%>"><%= @song.artist.name %></a></p>
      <br/>
      <h2> Genres: </h2>
      <ul>
        <% @song.genres.each do |genre| %>
        <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
        <% end %>
      </ul>



  </body>
</html>
